<Window x:Class="EmadAdel.Redemption_Team.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmadAdel.Redemption_Team"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Title="SplashScreen" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="LoadingText" Text="test" Foreground="Black" FontSize="20"/>
        <Image Source="pack://application:,,,/Assets/ss.png"
         Width="auto"
         Height="300"
         Stretch="Fill"
         Opacity="0.6"/>
    </Grid>
</Window>
